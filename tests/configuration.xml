<?xml version="1.0"?>
<phpunit bootstrap="/src/tests/bootstrap.php"
		 colors="false"
		 convertErrorsToExceptions="true"
		 convertNoticesToExceptions="true"
		 convertWarningsToExceptions="true"
		 stopOnFailure="true">
	
	    <testsuites>
        <testsuite name="default">
            <directory>/tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./</directory>
            <exclude>
                <directory>/tests</directory>
            </exclude>
        </whitelist>
    </filter>
	
</phpunit>